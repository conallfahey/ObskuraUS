  <section class="bg-stone-50 dark:bg-stone-900 py-12">
    <div class="mx-auto max-w-3xl px-6 lg:px-8">
      <div class="prose prose-lg max-w-2xl mx-auto">
        <div class="mb-6">
          <button 
            class="flex items-start w-full text-left text-stone-900 dark:text-stone-100 hover:text-stone-700 dark:hover:text-stone-300 transition-colors duration-200"
            onclick="toggleSection('cost-effectiveness')"
            aria-expanded="false"
            aria-controls="cost-effectiveness-content"
