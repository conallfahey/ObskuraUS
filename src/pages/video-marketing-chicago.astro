        const button = document.querySelector('button[aria-controls="' + sectionId + '-content"]');
        
        // Error handling for missing elements
        if (!content) {
          console.error('Content element not found: ' + sectionId + '-content');
          return;
        }
        if (!icon) {
          console.error('Icon element not found: ' + sectionId + '-icon');
          return;
        }
        if (!button) {
          console.error('Button element not found for: ' + sectionId);
          return;
        }
        
        if (content.classList.contains('hidden')) {
          content.classList.remove('hidden');
          icon.style.transform = 'rotate(180deg)';
          button.setAttribute('aria-expanded', 'true');
        } else {
          content.classList.add('hidden');
          icon.style.transform = 'rotate(0deg)';
          button.setAttribute('aria-expanded', 'false');
        }
      };
